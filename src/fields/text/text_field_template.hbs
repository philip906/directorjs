{{#ifCond config.title '||' config.tooltip}}
<div class="field-details">
	{{#if config.title}}
	<span>{{config.title}}</span>
	{{/if}}
	{{#if config.tooltip}}
	<span data-toggle="tooltip" data-placement="top" title="{{config.tooltip}}" >
		<span class="glyphicon glyphicon-question-sign infotip" aria-hidden="true"></span>
	</span>
	{{/if}}
</div>
{{/ifCond}}
{{#if config.immutable}}
<input type="input" value="{{value}}" placeholder="{{config.placeholder}}" disabled />
{{else}}
<input type="input" value="{{value}}" placeholder="{{config.placeholder}}" {{#ifCond value '==' config.first_item.value}}{{#if config.first_item.immutable}}disabled{{/if}}{{/ifCond}} />
{{/if}}